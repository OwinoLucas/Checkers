'use strict';

const USER_PHONE_REGEX = /^\+?\d{1,3}[-.\s]?\d{1,14}$/;

const Base = require('areto/validator/NumberValidator');

module.exports = class UserPhoneValidator extends Base {

    constructor (config) {
        super({
            min: 10,
            max: 13,
            pattern: USER_PHONE_REGEX,
            ...config.module.params.userPhoneValidator,
            ...config
        });
    }
};