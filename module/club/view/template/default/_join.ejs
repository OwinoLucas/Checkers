<!-- default/_join -->
<div class="page" data-page="join" data-handler="JoinPage">

  <div class="page-head">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#" data-action="main" data-t="">Club</a></li>
      <li class="breadcrumb-item" data-t="">Join</li>
    </ol>
  </div>

  
  
  <div class="main-controls row">
    <div class="offset-lg-3 col-lg-3 col-md-6 text-left">
      <h1 data-t="">Join a room</h1>
    </div>
    <div class="col-lg-3 col-md-6 mt-3">
      <a href="#" data-action="create" data-t="">
        <button class="btn-primary btn" data-command="create">
          <span data-t="">Back</span>
        </button></a>
    </div>
  </div>


  <div class="form-pane form" data-handler="JoinRoomForm">

    <div class="alert-error alert-danger alert"></div>

    <div class="form-attr form-group hidden">
      <input type="text" name="player">
    </div>
    
    <div class="form-attr form-group row required" data-handler="FormAttr">
      <label class="col-lg-3 col-form-label" data-t="">Player name</label>
      <div class="col-lg-9">
        <input type="text" name="name" class="form-control" required data-storage-key="userPlayerName" value="<%= _controller.user.identity?.getTitle() %>">
        <div class="error-block"></div>
      </div>
    </div>
    <div class="form-attr form-group row">
      <label class="col-lg-3 col-form-label" data-t="">Player number</label>
      <div class="col-lg-9">
        <input type="text" id="userPhoneNumber" value="<%- _controller.user.identity?.getPhone() %>" disabled>
      </div>
      
    </div>
    <!-- <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-4">
        <button class="btn-outline-primary btn" id="rasimuWedger" onclick="rasimuWedger()">Wedger</button>
      </div>
      <div class="col-md-5"></div>
    </div> -->
    

    <div class="form-attr form-group row" data-handler="FormGames">
      <label class="col-lg-3 col-form-label" data-t="">Public rooms</label>
      <div class="col-lg-9">
        <input name="game" type="hidden" value="">
        <div class="form-game-list form-check-list">
          <div class="form-check">
            <input class="form-check-input" value="{{name}}" type="radio">
            <label class="form-check-label" data-t="">All games</label>
          </div>
        </div>
        <template data-id="game">
          <div class="form-check">
            <input class="form-check-input" value="{{name}}" type="radio" checked>
            <label class="form-check-label">{{label}}</label>
          </div>
        </template>
        <div class="error-block"></div>
      </div>
    </div>

    <div class="form-rooms form-attr form-group row" data-handler="FormRooms">
      <label class="col-lg-3 col-form-label" data-t="">Choose a room</label>
      <div class="col-lg-9">
        <input name="rooms" type="hidden">
        <div class="form-control-plaintext">
          <div class="loader">
            <i class="fa fa-spinner fa-spin"></i>
          </div>
          <div class="alert-warning alert">
            <span data-t="">No public rooms found</span>
          </div>
          <div class="list"></div>
        </div>

        <template data-id="item">
          <div class="item" data-id="{{room}}">
            <div class="item-head">
              <div class="item-game">{{label}}</div>
              {{params}}
              <button class="join btn-primary btn" type="button">{{join}}</button>
            </div>
            <div class="item-body">{{options}}</div>
          </div>
        </template>

        <template data-id="param">
          <div class="item-param">{{label}} - {{value}}</div>
        </template>

        <template data-id="option">
          <div class="item-option">
            <label>{{label}}:</label> {{value}}
          </div>
        </template>
      </div>
    </div>

    <div class="form-attr form-group row required">
      <label class="col-lg-3 col-form-label" data-t="">Room ID</label>
      <div class="col-lg-9">
        <div class="input-group">
          <input type="text" name="room" required class="form-control">
          <button class="btn-outline-primary btn" type="button" data-command="join">
            <span data-t="">Join</span>
          </button>
        </div>
        <div class="error-block"></div>
      </div>
    </div>
  </div>
</div>


